<li id="comment_<%= comment.id %>" class="comment" data-channel="comment-<%= comment.id %>" data-user-id="<%= comment.user.id %>">
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <div class="comment-info">
    <small>-
      <%= comment.user.name %>
      <span class='dot-bullet'><%= localize(comment.created_at, format: :long) %></span>
      <% if comment.replies.size.zero? %>
        <span class='dot-bullet'><%= link_to "Edit", edit_polymorphic_path([comment.commentable, comment]), class: 'edit-comment-link', remote: true  %></span>
        <span class='dot-bullet'><%= link_to "Destroy", [comment.commentable, comment], method: :delete, class: 'delete-comment-link', data:{confirm:"Are your sure?"}, remote: true %></span>
      <% else %>  
        <!-- Note: very tricky !!!-->
        <%= link_to "For reply link", [comment.commentable, comment], method: :delete, class: 'delete-comment-link d-none' %>     
      <% end %>
      <span class='dot-bullet'><%= link_to "Reply", polymorphic_path([:reply, comment.commentable, comment]), class: 'reply-comment-link', remote: true  %></span>
    </small>
  </div>
  <% if comment.replies.any? %>
    <ul>
      <%= render comment.replies %>
    </ul>
  <% end %>
</li>
